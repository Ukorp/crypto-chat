
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.chatui.ChatController">
    <top>
        <Label text="Chat" style="-fx-font-size: 18px; -fx-padding: 10px;" />
    </top>
    <center>
        <ListView fx:id="messageList" />
    </center>
    <bottom>
        <HBox spacing="10" padding="10">
            <TextField fx:id="messageField" HBox.hgrow="ALWAYS" />
            <Button text="Send" fx:id="sendButton" onAction="#onSendMessage" />
        </HBox>
    </bottom>
</BorderPane>
